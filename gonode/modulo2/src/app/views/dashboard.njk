{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Ola, {{ user.name }} </strong>

    <p>Inicie um agendamento escolhendo um profissional abaixo:</p>

    <ul class="providers">
      {% for provider in providers %}
        <li class="provider">
          <div>
            <img class="avatar" src="/files/{{ provider.avatar }}" />

            <strong>{{ provider.name }}</strong>
          </div>

          <div class="actions">
            <a href="/app/appointments/new/{{ provider.id }}">+</a>

            <a href="/app/appointments/listing/{{ provider.id }}">
              <img class="icon" src="/images/calendar.svg" alt="">
            </a>
          </div>
        </li>
      {% endfor %}
    </ul>

    <a class="logout" href="/app/logout">Sair</a>
  </div>
{% endblock %}
